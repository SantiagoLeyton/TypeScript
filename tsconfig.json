{
  "compilerOptions": {
    "outDir": "./dist",          // Carpeta donde se generarán los JS
    "rootDir": "./",             // Carpeta donde están los TS (por defecto)
    "target": "es6",             // Versión de JS
    "module": "commonjs",
    "strict": true
  },
  "include": [
    "**/*.ts"                    // Incluye todos los TS del proyecto
  ],
  "exclude": [
    "node_modules",
    "dist"                       // Evita volver a compilar la salida
  ]
}